@model JobPortal.Models.Job

@{
    ViewBag.Title = "Post a New Job";
}

<style>
    /* Add a subtle background to the whole page to make the form pop */
    body {
        background-color: #f4f7f6;
    }

    .form-container {
        background-color: #ffffff;
        padding: 2.5rem 3rem;
        border-radius: 10px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        margin-top: 3rem;
        margin-bottom: 3rem;
        border-top: 5px solid #28a745;
    }

    .form-header h2 {
        font-weight: 600;
        color: #333;
    }

    .form-header .lead {
        color: #6c757d;
    }

    .form-header {
        text-align: center;
        margin-bottom: 2.5rem;
        padding-bottom: 1rem;
    }

    .form-group label {
        font-weight: 600;
        color: #555;
    }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
        padding: 10px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }

    .btn-submit {
        background-image: linear-gradient(to right, #28a745, #218838);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px 30px;
        border-radius: 50px; /* Pill-shaped button */
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
            color: white;
        }

    .btn-link {
        color: #555;
        font-weight: 500;
    }

        .btn-link:hover {
            color: #000;
        }
</style>

<div class="container">
    <!-- This row will center the form on the page -->
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="form-container">
                <div class="form-header">
                    <h2>@ViewBag.Title</h2>
                    <p class="lead">Fill out the details below to reach thousands of potential candidates.</p>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label" })
                            @Html.TextAreaFor(model => model.Description, 10, 30, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Salary, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g., 50000.00 (optional)" } })
                            @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.JobType, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.JobType, new { htmlAttributes = new { @class = "form-control", placeholder = "e.g., Full-time, Part-time" } })
                            @Html.ValidationMessageFor(model => model.JobType, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.ContactEmail, htmlAttributes: new { @class = "form-label" })
                            @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ContactEmail, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-5 text-center">
                            <input type="submit" value="Post Job" class="btn btn-submit" />
                            <div class="mt-3">
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-link" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
